<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#d3d3d3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cet325.bg71ul.assignment.activities.PricesActivity$PlaceholderFragment">

        <TableRow
            android:alpha="1"
            android:id="@+id/tableRowPrices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/section_label"
            >

            <TextView
                android:id="@+id/priceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Price: "
                android:textColor="@color/blackText"
                android:textSize="30dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/priceCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="$20 "
                android:textSize="30sp">

            </TextView>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="43dp">

            <TextView
                android:id="@+id/localRatesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text="Local Currency: "
                android:textStyle="bold"
                android:textColor="@color/blackText"
                android:textSize="30dp"
                android:layout_gravity="left">

            </TextView>

            <TextView
                android:id="@+id/localRates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text=" Euros "
                android:textSize="30dp"
                >

            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="43dp">

            <TextView
                android:id="@+id/yourCurrencyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_gravity="left"
                android:text="Your Currency: "
                android:textStyle="bold"
                android:textColor="@color/blackText"
                android:textSize="30dp">

            </TextView>

            <TextView
                android:id="@+id/yourCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text="Dollars"
                android:textSize="30dp">

            </TextView>
        </TableRow>

</TableLayout>